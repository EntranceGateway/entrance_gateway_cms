# ===================================
# Entrance Gateway CMS Environment
# ===================================
# Copy this file to .env and update values for your environment
# SECURITY: Never commit .env file to version control
# ===================================

# Port for development server
PORT=3000

# ===================================
# API Configuration
# ===================================
# Base URL for API requests
VITE_API_BASE_URL=https://api.entrancegateway.com

# ===================================
# Token Configuration
# ===================================
# Access token expiry in minutes (should match backend)
VITE_ACCESS_TOKEN_EXPIRY_MINUTES=15

# Refresh token expiry in days (should match backend)
VITE_REFRESH_TOKEN_EXPIRY_DAYS=7

# ===================================
# Rate Limiting Configuration
# ===================================
# Maximum failed login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes
VITE_LOCKOUT_DURATION_MINUTES=15

# ===================================
# Security Configuration
# ===================================
# IMPORTANT: Change this in production!
# 32-character key for token encryption in localStorage backup
# Generate with: openssl rand -base64 24 | head -c 32
VITE_TOKEN_ENCRYPTION_KEY=change-this-in-production-32ch

# ===================================
# Development Settings
# ===================================
# Set to 'production' in production builds
NODE_ENV=development
